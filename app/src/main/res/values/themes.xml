<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GDRitzys" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ritzys_green</item>
        <item name="colorPrimaryDark">@color/ritzys_green_dark</item>
        <item name="colorAccent">@color/ritzys_red</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/ritzys_green_dark</item>
        <!-- Background colors -->
        <item name="android:windowBackground">@color/light_gray</item>
        <!-- Text colors -->
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorSecondary">@color/medium_gray</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.GDRitzys.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.GDRitzys.AppBarOverlay" parent="ThemeOverlay.Material3.Dark.ActionBar" />

    <style name="Theme.GDRitzys.PopupOverlay" parent="ThemeOverlay.Material3.Light" />
</resources>