<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GDRitzys" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ritzys_green</item>
        <item name="colorPrimaryVariant">@color/ritzys_green_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/ritzys_red</item>
        <item name="colorSecondaryVariant">@color/ritzys_red_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Background colors -->
        <item name="android:windowBackground">@color/light_gray</item>
        <!-- Text colors -->
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorSecondary">@color/medium_gray</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.GDRitzys.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.GDRitzys.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.GDRitzys.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>